{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"pipeline": {
		"build": {
			"dependsOn": ["typecheck"],
			"outputs": ["dist/**"],
			"inputs": ["src/**", "public/**", "package.json", "tsconfig.json", "tsup.config.ts"]
		},
		"dev": {
			"cache": false
		},
		"eslint": {
			"cache": false,
			"outputs": [],
			"inputs": ["src/**/*.ts", "package.json"]
		},
		"eslint-fix": {
			"cache": false,
			"outputs": []
		},
		"typecheck": {
			"outputs": []
		},
		"package": {
			"dependsOn": ["build"],
			"outputs": [],
			"inputs": ["dist/**", "README.md", "package.json", "LICENSE"]
		},
		"publish-packages": {
			"dependsOn": ["package"],
			"outputs": [],
			"inputs": ["dist/**", "package.json"]
		},
		"test": {
			"inputs": [
				"src/**/*.ts",
				"__test__/**/*.ts",
				" jest.config.ts",
				"jest.globals.ts",
				"tsconfig.json",
				"package.json"
			],
			"outputs": []
		}
	}
}
